{
  "private": true,
  "scripts": {
    "build": "dotenv -e .env -- turbo run build",
    "dx": "docker-compose up -d && dotenv -e .env.local -- turbo run dev",
    "dev": "dotenv -e .env.local -- turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "tsconfig": "*",
    "turbo": "latest",
    "dotenv-cli": "latest"
  },
  "name": "codestreax",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
